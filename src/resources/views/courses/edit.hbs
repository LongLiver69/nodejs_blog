
<div class="mx-5 mt-4">
    <h3>Sửa khóa học</h3>
    <form class="mt-5" method="POST" action="/courses/{{account._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{account.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="age">Tuổi</label>
            <input type="text" class="form-control" value="{{account.age}}" id="age" name="age">
        </div>

        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" value="{{account.videoId}}" id="videoId" name="videoId">
        </div>

        <div class="form-group">
            <label for="image">Ảnh</label>
            <input type="text" class="form-control" value="{{account.image}}" id="image" name="image">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>